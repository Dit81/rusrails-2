
<div id="user_new">

<%= form_for :user, :url => { :action => :create } do |f| %>
      <%= render 'shared/error_messages' %>
  <p>
    <%= f.label "Имя" %><br>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label "Email" %><br>
    <%= f.text_field :email %>
  </p>

  <p>
    <%= f.label "Пароль" %><br />
    <%= f.password_field :password %>
  </p>

  <p>
   <%= f.label :password_confirmation, "Подтвердите пароль" %><br />
   <%= f.password_field :password_confirmation %>

  <p>
    <%= f.submit "Создать" %>
  </p>
<% end %>

<%= link_to 'Back', :controller => :welcome, :action => :index %>

</div>

